# install dataset
for ds in $(ls datasets/*.tar.gz); do 
    cp datasets/${ds} .
    cp datasets/export.csv .
    file=$(basename ${ds} .tar.gz)
    python << EOF
from pyiron import Project
Project("datasets").unpack("${file}")
EOF
    rm ${ds}
    rm export.csv
done

# ngl view for jupyter
jupyter nbextension install nglview --py --sys-prefix
jupyter nbextension enable nglview --py --sys-prefix

# ngl view for jupyter lab
jupyter labextension install @jupyter-widgets/jupyterlab-manager --no-build
jupyter labextension install nglview-js-widgets --minimize=False
